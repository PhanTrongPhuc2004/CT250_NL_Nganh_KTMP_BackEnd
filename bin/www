#!/usr/bin/env node

// Gá»i cÃ¡c thÆ° viá»‡n cáº§n thiáº¿t
var app = require('../app');
var debug = require('debug')('clubmanagementbe:server');
var http = require('http');

// Láº¥y cá»•ng tá»« mÃ´i trÆ°á»ng vÃ  lÆ°u vÃ o á»©ng dá»¥ng
var port = normalizePort(process.env.PORT || '5000'); // NÆ¡i thay Ä‘á»•i Port
app.set('port', port);

// Táº¡o server HTTP
var server = http.createServer(app);

// KÃCH HOáº T SOCKET TRÆ¯á»šC KHI LISTEN
require('../src/utils/socket')(server, app);

// Láº¯ng nghe cá»•ng Ä‘Ã£ chá»‰ Ä‘á»‹nh
server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

// HÃ m chuáº©n hÃ³a cá»•ng
function normalizePort(val) {
  var port = parseInt(val, 10);
  if (isNaN(port)) return val;
  if (port >= 0) return port;
  return false;
}

// HÃ m xá»­ lÃ½ lá»—i khi khá»Ÿi Ä‘á»™ng server
function onError(error) {
  if (error.syscall !== 'listen') throw error;
  var bind = typeof port === 'string' ? 'Pipe ' + port : 'Port ' + port;
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges'); // â† Sá»­a 'server' thÃ nh 'requires'
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

// HÃ m thÃ´ng bÃ¡o khi server Ä‘Ã£ láº¯ng nghe
function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string' ? 'pipe ' + addr : 'port ' + addr.port;
  console.log('ğŸš€ Server running on http://localhost:' + port);
  console.log('ğŸ”Œ Socket.IO running on ws://localhost:' + port + '/socket.io/');
  debug('Listening on ' + bind);
}